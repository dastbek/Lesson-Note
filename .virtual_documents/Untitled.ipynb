mybigDick = {}
file_r = open("ThinkStats_code/eng2pirate.txt", "r") #open file to read
for line in file_r:
    current = line.split() #remove blank space, and create a list, whose elements are the words on that line 
    mybigDick[current[0]] = current[1]
mybigDick


